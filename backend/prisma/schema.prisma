generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String             @id @default(cuid())
  email             String             @unique
  password          String
  firstName         String
  lastName          String
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  bio               String?
  role              String             @default("USER")
  breathingSessions BreathingSession[]
  journalEntries    JournalEntry[]

  @@map("users")
}

model JournalEntry {
  id        String   @id @default(cuid())
  userId    String
  title     String
  content   String
  mood      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags      String[]
  user      User     @relation(fields: [userId], references: [id])

  @@map("journal_entries")
}

model BreathingSession {
  id        String   @id @default(cuid())
  userId    String
  duration  Int
  type      String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@map("breathing_sessions")
}

model MentalHealthResource {
  id           String   @id @default(cuid())
  title        String
  description  String
  content      String?
  category     String
  type         String?
  contact      String?
  website      String?
  availability String?
  icon         String?
  featured     Boolean  @default(false)
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("mental_health_resources")
}