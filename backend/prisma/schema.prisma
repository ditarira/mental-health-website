generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  settings              UserSettings?
  id                 String             @id @default(cuid())
  email              String             @unique
  password           String
  firstName          String
  lastName           String
  createdAt          DateTime           @default(now())
  updatedAt          DateTime
  bio                String?
  role               String             @default("USER")
  preferences        Json?
  location           String?
  phone              String?
  breathing_sessions BreathingSession[]
  journal_entries    JournalEntry[]
  settings           UserSettings?

  @@map("users")
}

model UserSettings {
  id         Int    @id @default(autoincrement())
  userId     String @unique
  fontSize   String @default("medium")
  fontWeight String @default("normal")
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

model JournalEntry {
  id          String   @id @default(cuid())
  userId      String
  title       String
  content     String
  mood        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  tags        String[]
  preferences Json?
  users       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("journal_entries")
}

model BreathingSession {
  id        String   @id @default(cuid())
  userId    String
  duration  Int
  type      String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  users     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("breathing_sessions")
}

model mental_health_resources {
  id          String   @id
  title       String
  description String
  content     String
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  url         String?
  preferences Json?
}model UserSettings {
 id         Int    @id @default(autoincrement())
 userId     String @unique
 fontSize   String @default("medium")
 fontWeight String @default("normal")
 createdAt  DateTime @default(now())
 updatedAt  DateTime @updatedAt
 user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
